{
	"manifest_version": 3,
	"name": "Steam + Gamalytic Embedded Analytics",
	"version": "0.0.5",
	"permissions": ["storage"],
	"host_permissions":
	[
		"https://store.steampowered.com/*",
		"https://api.gamalytic.com/*"
	],
	"content_scripts":
	[{
		"matches": ["https://store.steampowered.com/app/*"],
		"js": ["content.js"],
		"run_at": "document_idle"
	}],
	"background":
	{
		"service_worker": "bg.js"
	},
	"action":
	{
		"default_title": "Steam + Gamalytic Embedded Analytics",
		"default_popup": "popup.html"
	}
}